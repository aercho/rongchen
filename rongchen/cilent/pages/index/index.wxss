/**index.wxss**/
/*搜索框样式*/
.search-border{
    border-radius: 10rpx;
    width: 80%;
    height: 64rpx;

}
.searchBox{

    height: 90rpx;
    width: 100%;
    position: fixed;
    z-index: 2;
}
.search{
    width: 100%;
    display: inline-block;
  
    height: 65rpx;
    font-size: 30rpx;
}
.searchImg{
    width: 65rpx;
    height: 65rpx;
}

.container{
  position: relative;
}
/*分割线*/
.divide{
  width:100%;
  height: 6rpx;
  background: #dadada;
}

.img-wrapper{
  height: 450rpx;
}
.imgView{
  width: 45%;
  height: 100%;
  margin-right: 4%;
  float: left;
}
.slide-image{
  height: 450rpx;
  width: 100%;
}
/*公司第一套样式*/
.Introduce{
  width: 100%;
  height: 400rpx;
  
}
.companyView1{
  width: 48%;
}
.companyName{
  font-weight: bold;
}
.companyView2{
  width: 48%;
  margin-left: 10rpx;
}
.companyIntro{
  font-size: 28rpx;
  color: #5e5e5e;
}
.contact{
  font-size: 20rpx;
}

.list-container{
  width: 100%;
  margin-top:50rpx;
  border-top:4rpx solid #dadada;
  margin-bottom: 40rpx;
}
.Purchase{
  margin: 20rpx 10rpx 0rpx 20rpx;
}
.Recommend{
  margin: 20rpx 10rpx 0rpx 20rpx;
}
.PurchaseBox{
  display: flex;
  justify-content: space-between;
}
.RecommendBox{
  display: flex;
  justify-content: space-between;
}
.Purlist-item{

}
.Reclist-item{

}
.Purlist-item image{
  width: 200rpx;
  height: 200rpx;
  flex: 1;
}
.Purtext{
  color:#00CD00;
  font-weight: bold;
}
.Rectext{
  font-weight: bold;
  color:#FF4500;
}
.Reclist-item image{
  width: 200rpx;
  height: 200rpx;
  /*flex: 1;*/
}
.itemName{
  color: #2E2E2E;
  font-size: 30rpx;
  margin: 0 auto;
  font-weight: bolder;
  display: flex;
  justify-content: center;
}
.oldPrice{
  font-size: 24rpx;
  color: #AAAAAA;
}
.newPrice{
  font-size: 24rpx;
  color: #EE0000;
}
/*删除旧价格*/
.del{
  text-decoration: line-through;
}

